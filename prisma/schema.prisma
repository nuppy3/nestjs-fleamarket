model Store {
  // <カラム(フィールド)> <Prismaの型> <DBの型(VarCharなど(Intは不要か）、PK,FK,デフォルト値指定> <DB(Postgresql)の型>

  // あくまで型はPrismaの型を定義
  // @id：PK指定
  // default：デフォルト値を指定。uuidにて自動採番。
  // @db.Uuid： PrismaのString型はPostgresqlだとtext型に変換されるので、Postgresqlの
  // 　　　　　　Uuid型として認識させる、@db.Uuid を指定する。 
  id            String     @id @default(uuid()) @db.Uuid
  name          String     @db.VarChar(255)
  kanaName      String?    @db.VarChar(255)
  status        StorStatus @default(editing)
  zipCode       String?    @db.VarChar(8)
  email         String     @db.VarChar(255)
  address       String?    @db.VarChar(255)
  // prefectureを削除：今後、prefecture TBL を作成するため
  // prefecture    String?    @db.VarChar(255)
  phoneNumber   String     @db.VarChar(13)
  businessHours String?    @db.VarChar(255)
  // PostgreSQLはネイティブ配列型 (String[])という型が存在する（MySQL/oracleにはない）
  holidays      String[] // String[]? は定義できない(任意NG) → 必須のリスト型（データがない場合は [] を使用）
  // now(): データが追加されたタイミングの時間
  // @db.Timestamp(0) : 秒まで表示
  createdAt     DateTime   @default(now()) @db.Timestamp(0)
  // @updatedAt: 更新時刻がセットされる
  updatedAt     DateTime   @updatedAt @db.Timestamp(0)

  // Userテーブルとの紐付け関連
  // Userテーブルとのリレーションを定義
  // @relation：参照元(Store)と参照先(User)のモデルとの関連付けを行う
  //　・fields属性：参照元(Item)モデルのキーを指定。
  //  ・references属性：参照先(User)モデルの主キーを指定
  //  ・onDelete: Cascade ： 関連するUserが削除されると、紐づくStoreも削除される
  userId       String      @db.Uuid
  user         User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  // Prefectureテーブルとのリレーション
  prefectureId String?     @db.Uuid
  prefecture   Prefecture? @relation(fields: [prefectureId], references: [id], onDelete: Cascade)
}

// あくまでPrismaのenumであり、Typescriptのenumじゃないから、プロパティに","を付与しない
enum StorStatus {
  published
  editing
  suspended
}

model Prefecture {
  // <カラム(フィールド)> <Prismaの型> <DBの型(VarCharなど(Intは不要か）、PK,FK,デフォルト値指定> <DB(Postgresql)の型>

  // @id：PK指定
  // default：デフォルト値を指定。uuidにて自動採番。
  // @db.Uuid： PrismaのString型はPostgresqlだとtext型に変換されるので、Postgresqlの
  // 　　　　　　Uuid型として認識させる、@db.Uuid を指定する。 
  id        String           @id @default(uuid()) @db.Uuid
  code      String           @unique @db.VarChar(2) // 01:北海道 13:東京
  name      String           @db.VarChar(255)
  kanaName  String           @db.VarChar(255)
  status    PrefectureStatus @default(published)
  kanaEn    String           @db.VarChar(255) // "Tokyo-to"
  // now(): データが追加されたタイミングの時間
  // @db.Timestamp(0) : 秒まで表示
  createdAt DateTime         @default(now()) @db.Timestamp(0)
  // @updatedAt: 更新時刻がセットされる
  updatedAt DateTime         @updatedAt @db.Timestamp(0)

  // Storeテーブルとのリレーション(1:N)
  store Store[]

  // Regionテーブルとの紐付け関連
  // Regionテーブルとのリレーションを定義
  // @relation：参照元(Prefecture)と参照先(Region)のモデルとの関連付けを行う
  //　・fields属性：参照元(Item)モデルのキーを指定。
  //  ・references属性：参照先(Region)モデルの主キーを指定
  //  ・onDelete: Cascade ： 関連するUserが削除されると、紐づくStoreも削除される
  regionId String? @db.Uuid
  region   Region? @relation(fields: [regionId], references: [id], onDelete: Cascade)

  // Userテーブルとの紐付け関連
  // Userテーブルとのリレーションを定義
  // @relation：参照元(Store)と参照先(User)のモデルとの関連付けを行う
  //　・fields属性：参照元(Item)モデルのキーを指定。
  //  ・references属性：参照先(User)モデルの主キーを指定
  //  ・onDelete: Cascade ： 関連するUserが削除されると、紐づくStoreも削除される
  userId String? @db.Uuid
  user   User?   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum PrefectureStatus {
  published
  suspended
}

model Region {
  // <カラム(フィールド)> <Prismaの型> <DBの型(VarCharなど(Intは不要か）、PK,FK,デフォルト値指定> <DB(Postgresql)の型>

  // @id：PK指定
  // default：デフォルト値を指定。uuidにて自動採番。
  // @db.Uuid： PrismaのString型はPostgresqlだとtext型に変換されるので、Postgresqlの
  // 　　　　　　Uuid型として認識させる、@db.Uuid を指定する。 
  id          String       @id @default(uuid()) @db.Uuid
  code        String       @unique @db.VarChar(2) // 01:北海道 13:東京
  name        String       @db.VarChar(255)
  kanaName    String       @db.VarChar(255)
  status      RegionStatus @default(published)
  kanaEn      String       @db.VarChar(255) // "tohoku"
  // now(): データが追加されたタイミングの時間
  // @db.Timestamp(0) : 秒まで表示
  createdAt   DateTime     @default(now()) @db.Timestamp(0)
  // @updatedAt: 更新時刻がセットされる
  updatedAt   DateTime     @updatedAt @db.Timestamp(0)
  // Prefectureテーブルとのリレーション(1:N)
  prefectures Prefecture[]

  // Userテーブルとの紐付け関連
  // Userテーブルとのリレーションを定義
  // @relation：参照元(Store)と参照先(User)のモデルとの関連付けを行う
  //　・fields属性：参照元(Item)モデルのキーを指定。
  //  ・references属性：参照先(User)モデルの主キーを指定
  //  ・onDelete: Cascade ： 関連するUserが削除されると、紐づくStoreも削除される
  userId String? @db.Uuid
  user   User?   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum RegionStatus {
  published
  suspended
}
